{
    "name": "wk-starter-plugin",
    "description": "Plugin zum erstellen eines neuen Plugins",
    "keywords": ["wordpress", "plugin"],
    "version": "0.0.1",
    "homepage": "https://webkinder.ch/",
    "license": "GPL-3.0+",
    "authors": [{
        "name": "Pascal Knecht",
        "email": "support@webkinder.ch",
        "homepage": "https://webkinder.ch/"
    }],
    "type": "wordpress-plugin",
    "require": {
        "php": ">=5.3.2",
        "composer/installers": "v1.2.0"
    },
    "autoload": {
        "psr-4": {"WebKinder\\StarterPlugin\\": "lib/"}
    },
    "scripts": {
        "build": "git archive --format=zip HEAD -o ${PWD##*/}.zip --worktree-attributes && zip -ur ${PWD##*/}.zip vendor"
    }
}
